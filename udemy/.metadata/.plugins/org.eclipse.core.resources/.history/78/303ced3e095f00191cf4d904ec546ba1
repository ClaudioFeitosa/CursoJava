package br.com.geekuniversity.secao11;

public class Conta {
	int numero;
	float saldo;
	float limite;
	Cliente cliente;
	
	// construtor
	public Conta(int numero, float saldo, float limite, Cliente cliente) {
		this.numero=numero;
		this.saldo=saldo;
		this.limite=limite;
		this.cliente=cliente;
	}
// metodos
	void sacar(float valor) {
		this.saldo = this.saldo - valor;
	}
	void depositar(float valor) {
		this.saldo = this.saldo + valor;
	}
	
}
