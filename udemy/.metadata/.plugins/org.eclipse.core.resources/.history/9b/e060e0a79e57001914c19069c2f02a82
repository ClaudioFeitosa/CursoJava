package Secao09Exerciciose2;

import java.util.Scanner;

import Secao09Exercicios.Pessoa;


public class Agenda {

	public static void main(String[] args) {
		
		Pessoa pessoas[] = new Pessoa[3];
		Scanner teclado = new Scanner(System.in);
		String nome;
		int idade;
		float altura;
		
		
		System.out.println("digite os dados da pessoa");
		
		for (int i=0; i < pessoas.length; i++) {
				System.out.println("informe o nome");
				nome = teclado.nextLine();
				System.out.println("informe a idade");
				idade = Integer.parseInt(teclado.nextLine());
				System.out.println("informe a altura");
				altura = Float.parseFloat(teclado.nextLine());
								
				//novapessoa[i].novapessoa(nome, altura, idade);
				Pessoa agenda = new Pessoa(nome,idade,altura);
				pessoas[i] = agenda;
		}

		teclado.close();
		
			for (int i=0; i <pessoas.length; i++) {
				pessoas[i].imprimeTudo();
				
			}
			
						
			System.out.print("Nome para excluir");
			
			String deletar = teclado.nextLine();
			
			for (int i = 0; i< pessoas.length-1; i++) {
				if (deletar.equals(pessoas[i].getNome()))
					for (int j = 0; j < pessoas.length-1; j++) {
						
						pessoas[j] = pessoas[j+1];
					}
			
				pessoas[i].imprimeTudo();
			}
		}		
	}

	
