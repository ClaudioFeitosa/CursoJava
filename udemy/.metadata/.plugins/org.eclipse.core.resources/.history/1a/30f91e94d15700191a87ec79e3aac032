package Secao09Exerciciose2;

import java.util.Scanner;

public class Agenda {
void String pesquisa;

	public static void main(String[] args) {
		
		Cadastro_pessoas Agenda_pessoas[] = new Cadastro_pessoas[3];
		Scanner teclado = new Scanner(System.in);
		String nome;
		int idade;
		float altura;
		
		
		System.out.println("digite os dados da pessoa");
		
		for (int i=0; i < Agenda_pessoas.length; i++) {
				System.out.println("informe o nome");
				nome = teclado.nextLine();
				System.out.println("informe a idade");
				idade = Integer.parseInt(teclado.nextLine());
				System.out.println("informe a altura");
				altura = Float.parseFloat(teclado.nextLine());
								
				//novapessoa[i].novapessoa(nome, altura, idade);
				Cadastro_pessoas agenda = new Cadastro_pessoas (nome,idade,altura);
				Agenda_pessoas[i] = agenda;
		}
		teclado.close();
		
			for (int i=0; i <Agenda_pessoas.length;  i++) {
				Agenda_pessoas[i].imprimeTudo();
			}
			
			System.out.println("Digite o nome para pesquisar");
			String pesquisa = teclado.nextLine();

			for (int i=0; i <Agenda_pessoas.length; i++) {
				if (pesquisa.equals(Agenda_pessoas[i].getNome())) {
					Agenda_pessoas[i].resultadoDeBusca();
					//Agenda_pessoas[i].imprimeTudo();;
				
			}
			
			}
	}
}

	
