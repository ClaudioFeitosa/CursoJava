package Secao04Exercicios;

import java.util.Scanner;

public class e10 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		double altura, pesoIdeal;
		double homem = 72.7f;
		double mulher = 62.1f;
		String sexo;
		
		System.out.println("informe o sexo F / M ");
		sexo = teclado.nextLine();
		
		System.out.println("informe a sua altura: ");
		altura = teclado.nextFloat();
		
		switch (sexo) {
		
		case "f":
			pesoIdeal =  (mulher * altura) - 44.7;
			System.out.println("seu peso ideal é :" + pesoIdeal);
			break;
		case "F":
			pesoIdeal =  (mulher * altura) - 44.7;
			System.out.println("seu peso ideal é :" + pesoIdeal);
						
			break;

		case "m":
			pesoIdeal =  (homem * altura) - 58;
			System.out.println("seu peso ideal é :" + pesoIdeal);			
			break;
	
		case "M":
			pesoIdeal =  (homem * altura) - 58;
			System.out.println("seu peso ideal é :" + pesoIdeal);			
			break;
	
		default:
			
			System.out.println("Sexo informado é invalido, o programa sera finalizado");			

			break;
		}

	teclado.close();		
			
		
	}

}
