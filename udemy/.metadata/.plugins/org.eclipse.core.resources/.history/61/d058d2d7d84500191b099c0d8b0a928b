			int n1, n2, nota1, nota2;
				Scanner teclado = new Scanner (System.in);
				
				System.out.println("digite a nota 1");
				n1 = teclado.nextInt();

				System.out.println("digite a nota 2");
				n2 = teclado.nextInt();
				
				
				
				if (n1 > 0) {
					if (n1 <= 10);
					
				} else 
					System.out.println("o nota é invalida");
					System.exit(0);

				{
					
				if (n2 > 0) {
					if (n2 <= 10);
						
				} else 
					System.out.println("o nota é invalida");
					System.exit(0);
				{
					
				int media = (n1+n2)/2;
				System.out.println("a maedia é" + media);
				}
